{
  "name": "ansible-dev-container-secure",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile",
    "args": {
      "USER_UID": "1000",
      "USER_GID": "1000"
    }
  },

  "containerUser": "ansible",
  "remoteUser": "ansible",

  "runArgs": [
    "--hostname=ansible-dev-container"
  ],

  "mounts": [
    "source=${env:HOME}/.ssh,target=/home/ansible/.ssh,type=bind,consistency=cached",
    "source=/run/user/1000/podman/podman.sock,target=/var/run/docker.sock,type=bind"
  ],

  "remoteEnv": {
    "DOCKER_HOST": "unix:///var/run/docker.sock",
    "PODMAN_USERNS": "keep-id"
  },

  "postCreateCommand": "git config --global --add safe.directory '*' && git config pull.rebase true",

  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.ansible",
        "ms-azuretools.vscode-docker",
        "oderwat.indent-rainbow"
      ]
    }
  }
}
